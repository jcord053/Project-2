<nav id="nav-bar">
    <div>
        <h2>Team Tracker</h2>
    </div>
    <div id="buttons">
        <a href="/profile"><button>Profile</button></a>
        <form action="/logout" method="post">
            <button>Log Out</button>
        </form>
    </div>
</nav>


<h1>{{teamInfo.data.full_name}}</h1>

<h3>Conference: {{teamInfo.data.conference}}</h3>

<h3>Division: {{teamInfo.data.division}}</h3>


<ul id="year-list">
    <p>Click to change the season to view:</p>
    <div id="years">
        <li><a href="/team-page/{{id}}/2010">2010</a></li>
        <li><a href="/team-page/{{id}}/2011">2011</a></li>
        <li><a href="/team-page/{{id}}/2012">2012</a></li>
        <li><a href="/team-page/{{id}}/2013">2013</a></li>
        <li><a href="/team-page/{{id}}/2014">2014</a></li>
        <li><a href="/team-page/{{id}}/2015">2015</a></li>
        <li><a href="/team-page/{{id}}/2016">2016</a></li>
        <li><a href="/team-page/{{id}}/2017">2017</a></li>
        <li><a href="/team-page/{{id}}/2018">2018</a></li>
        <li><a href="/team-page/{{id}}/2019">2019</a></li>
        <li><a href="/team-page/{{id}}/2020">2020</a></li>
        <li><a href="/team-page/{{id}}/2021">2021</a></li>
    </div>
</ul>

<ul>
    {{#each team.data }}
    <li>
        <p>{{this.date}}</p>
        <p> {{this.visitor_team_score}} {{ this.visitor_team.name}} @ {{this.home_team.name}} {{this.home_team_score}} {{this.status}}</p>
        
    </li>
    {{/each}}
</ul>