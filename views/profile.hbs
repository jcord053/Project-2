<nav id="nav-bar">
    <div>
        <h2>Team Tracker</h2>
    </div>
    <div id="buttons">
        <a href="/profile"><button>Profile</button></a>
        <form action="/logout" method="post">
            <button>Log Out</button>
        </form>
    </div>
</nav>

<main id="profile-page">


<h2>Welcome, {{ fullProfile.username }}!</h2>

<div id="favorite-sec">

    <h4>Your favorite team is: {{ fullProfile.favoriteTeamName }}</h4>
    <p><a href="/team-page/{{ fullProfile.favoriteTeamId }}">View Your Favorite Team's Latest Season</a></p>

    <p><a href="/update-favorite">Click Here to Update Your Favorite Team</a></p>

</div>

<div id="following-sec">
    <h4>Your following teams: </h4>

    <ul id="following-list">
        {{#each fullProfile.additionalTeams }}
        <li>{{ this.favoriteTeamName }}</li>
        <li><a href="/team-page/{{this.favoriteTeamId}}">View Latest Season</a></li>
        <li>
            <form action="/delete-team/{{this._id}}" method="post">
                <button>Delete this team</button>
            </form>
        </li>
        {{/each}}
    </ul>
    <p><a href="/add-teams">Want to Follow More Teams? Click Here!</a></p>

</div>





</main>



