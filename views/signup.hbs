<h1>Welcome! We would love to have you as part of the team!</h1>
  <form method="post" action="/signup" id="form">
      <div>
        <label>Username:</label>
        <input type="text" name="username" required>
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password" required>
      </div>
      <div>
          <label>Favorite Team:</label>
          <select name="team">
              {{#each teams.data.data}}
              <option value="{{this.id}}{{this.full_name}}">{{this.full_name}}</option>
              {{/each}}
          </select>
      </div>
    
      <button type="submit" class="button">Join the team!</button>
    
  </form>




  <a href="/login"><button class="button">Click here if you have an Account</button></a>